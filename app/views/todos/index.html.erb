<h1>Shit You Need To Do</h1>
<br />
<button><%= link_to 'New Todo', new_todo_path %></button>
<% @todos.each do |todo| %>
  <h4><%= todo.task %></h4>
  <button><%= link_to 'View', todo_path(todo) %></button>
  <button><%= link_to 'Edit', edit_todo_path(todo) %></button>
  <button class="danger"><%= link_to 'Delete', todo, method: :delete %></button>
<% end %>
